{% extends 'base.html.twig' %}

{% block title %}login{% endblock %}

{% block body %}
    {% if error %}
    <div class="col-8 d-flex flex-column justify-content-center alert alert-danger text-center fw-bold m-auto my-3">
        Les données de connexion ne correspondent à aucun utilisateur, réessaie!
    </div>
    {% endif %}

    <h1 class="mt-5 mb-3 d-flex align-items-center justify-content-center text-center">Se connecter</h1>

    <div class="my-3 col-12 col-lg-8 m-auto">
        <div class="form justify-content-around bg-light-form shadow pb-3">
            <form action="{{ path('app_login') }}" method="post" class="my-3 d-flex flex-column ">
                
                <div class="mb-5 col-12 col-lg-8 m-auto">
                    <label for="username" id="username-label-login" class="form-label fw-bold fs-1 d-flex justify-content-center">Email</label>
                    <input type="text" class="form-control text-center " id="username" name="_username" placeholder="Indique ton email">
                </div>

                <div class="mb-5 col-12 col-lg-8 m-auto">
                    <label for="password" id="password-label-login" class="form-label fw-bold fs-1 d-flex justify-content-center">Mot de passe</label>
                    <input type="password" class="form-control text-center" id="password" name="_password" placeholder="Chuuuut ...">
                </div>

                <input type="hidden" name="_target_path" value="{{ path('app_home') }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-flex justify-content-center">
                    <button type="submit" class="my-3 px-5 py-2 fs-2 button-deco">Connexion</button>
                </div>
            </form>

            <div class="mt-5 mb-2 px-3 d-lg-flex justify-content-between">
                <a href="{{ path('security_registration') }}" class="mb-2 text-decoration-none fw-medium fst-italic text-black d-flex justify-content-end">Je n'ai pas encore de compte!</a>
                <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none fw-medium fst-italic text-black d-flex justify-content-end">J'ai oublié mon mot de passe ...</a>
            </div>

        </div>
    </div>
{% endblock %}

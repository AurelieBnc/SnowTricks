{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="d-sm-none d-lg-block">
        <h1 class="m-auto my-5 d-flex align-items-end justify-content-center text-center">Création de mon compte perso</h1>
    </div>
    <h1 class="m-auto my-5 d-lg-none d-flex align-items-center justify-content-center text-center" style="font-size: 5rem;">Création de mon compte perso</h1>

    <div class="my-5 col-12 col-lg-8 m-auto">
        <div class="pt-5 px-5 justify-content-around bg-light-form shadow pb-3">

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

                {{ form_row(registrationForm.username) }} 
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }} 
                
                <div class="d-flex justify-content-center">
                    <button type="submit" class="my-3 fs-3 button-deco">Envoyer !</button>
                </div>

            {{ form_end(registrationForm) }}
            <a href="{{ path('app_login') }}" class="text-decoration-none fw-medium fst-italic text-black d-flex justify-content-end">J'ai déjà un compte, je me connecte !</a>

        </div>
    </div>

{% endblock %}

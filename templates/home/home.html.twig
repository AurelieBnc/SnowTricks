{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block head %}
<div id="bg-head" style=" height: 100%;"  class="row text-center m-0 p-0">
    <div style="height:200px;"></div>
    <div class="d-sm-none d-lg-block">
        <h1 class="d-flex align-items-end justify-content-center text-center">Site communautaire de partage de Tricks</h1>
    </div>
    <h1 class="d-lg-none d-flex align-items-end justify-content-center text-center" style="font-size: 5rem;">Site communautaire de partage de Tricks</h1>
    
    <div class="d-sm-none d-lg-block">
        <div class="d-flex align-items-end justify-content-end">
            <a href="#tricks-list"><img id="first-arrow-icon" src="../images/icon/arrowBottom.png" alt="arrow bottom"></a>
        </div>
    </div>
    <div class="d-lg-none d-flex align-items-end justify-content-center">
        <a href="#tricks-list-sm"><img id="first-arrow-sm-icon" src="../images/icon/arrowBottom.png" alt="arrow bottom"></a>
    </div>

</div>
{% endblock %}

{% block body %}
<div class="d-sm-none d-lg-block">
    <h2 id="tricks-list" class="text-center my-5">Liste des Tricks</h2>
</div>
    <h2 id="tricks-list-sm" class="d-lg-none text-center my-5" style="font-size: 4rem;">Liste des Tricks</h2>

<div class="row d-flex col-12 pb-5">

    {% for post in postList %}
    
    <div class="card ms-auto col-12 col-lg-2 m-3 p-0">
        <a href= "{{ path('post', {'id': post.id, 'loader': 1}) }}">

        {% set defaultPicture = 1 %}
            {% for picture in pictureList %}
                {% if post.id is same as picture.post.id %}
                    {% if picture.name is not null %}
                        {% set defaultPicture = 0 %}
                        <img src="{{ asset('images/uploads/postImages/mini/250x250-'~ picture.name) }}" class="card-img-top m-auto" alt="...">
                    {% endif %}
                {% endif %}
            {% endfor %}
            {% if defaultPicture is same as 1 %}
                <img src="../images/default/defaultImage.jpg" class="card-img-top m-auto" alt="...">
            {% endif %}

        </a>

        <div class="card-body list-group-item mt-auto">
            <div class="d-sm-none d-lg-block">
                <h3 class="card-text pt-2 ps-2 pb-0">{{ post.title }}</h3>
            </div>
            <h3 class="d-lg-none card-text pt-3 ps-3" style="font-size: 5rem;">{{ post.title }}</h3>
        </div>
        <div class="d-sm-none d-lg-block">
            <div class="card-footer d-flex justify-content-end align-items-end p-0 border-top">   
                <p class="px-3 m-0" >
                    <a href=""><i class="fa-solid fa-pencil" style="color: #D9C7A6;"></i></a>
                </p>
                <p class="px-2 m-0">
                    <a href=""><i class="fa-solid fa-trash" style="color: #B04C46;"></i></a>
                </p>
            </div>            
        </div>

        <div class="card-footer d-flex justify-content-end align-items-end p-0 border-top">
            <p class="d-lg-none px-5 m-0">
                <a href=""><i id="pencil-icon" class="fa-solid fa-pencil" style="color: #D9C7A6;"></i></a>
            </p>
            <p class="d-lg-none px-2 m-0">
                <a href=""><i id="trash-icon" class="fa-solid fa-trash" style="color: #B04C46;"></i></a>
            </p>
        </div>
    </div>

    {% endfor %}

    {% if countPostList is defined and countPostList > 15 and loader is defined %}
    <div class=" mt-5 pb-sm-5 pb-lg-0 pt-sm-0 pt-lg-5">
        <div class="d-flex align-items-end justify-content-center text-center">
            <a href="{{ path("complete_post_list") }}" id="load-button" class="d-flex flex-colomn rounded text-decoration-none">
                <i id="spinner-icon" class="fa-solid fa-spinner p-2"></i>
                <h3 id="load-text" class="fs-5 m-0 p-3"> Load more </h3>
            </a>

        </div>
    {% endif %}
        <div class="d-sm-none d-lg-block">
            <div class="d-flex align-items-end justify-content-end">
                <a href="#main-nav-bar"><img id="second-arrow-icon" src="../images/icon/arrowTop.png" alt="arrow top"></a>
            </div>
        </div>
        <div class="d-lg-none d-flex align-items-end justify-content-center justify-content-end mb-2 pb-2">
            <a href="#bg-head"><img id="second-arrow-sm-icon" src="../images/icon/arrowTop.png" alt="arrow top"></a>
        </div>
    </div>
</div>

{% endblock %}

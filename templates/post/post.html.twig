<h1 class="m-auto my-5 d-lg-none d-flex align-items-center justify-content-center text-center" style="font-size: 5rem;">
    {% if editMode is same as false %}
        Créer un article
    {% else %}
        Editer mon article
    {% endif %}
</h1>

<div class="my-5 col-12 col-lg-8 m-auto">
    <div class="pt-5 px-5 justify-content-around bg-light-form shadow pb-3">
{# 
        {{ form_errors(form) }} #}

        {{ form_start(form) }}

        {{ form_row(form.title) }} 
        {{ form_row(form.content) }}

        {{ form_row(form.category) }}
        {{ form_row(form.pictureList) }}
        {{ form_label(form.media) }} <img src="{{ asset('images/logo/youtube-logo.png') }}" id="youtube-logo" class="card-img-top m-auto pb-1 ps-1" alt="...">
        {{ form_widget(form.media) }} 

            
        <div class="d-flex justify-content-center">
            <button type="submit" class="my-3 fs-3 button-deco">            
            {% if editMode is same as false %}
                Ajouter un nouveau strick !
            {% else %}
                Enregistrer les modifications !
            {% endif %}
            </button>
        </div>

        {{ form_end(form) }}

    </div>
</div>



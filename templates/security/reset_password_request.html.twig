{% extends 'base.html.twig' %}

{% block title %}Réinitialiser ton mot de passe{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="d-sm-none d-lg-block">
        <h1 class="m-auto my-5 d-flex align-items-end justify-content-center text-center">Réinitialiser ton mot de passe</h1>
    </div>
    <h1 class="m-auto my-5 d-lg-none d-flex align-items-center justify-content-center text-center" style="font-size: 5rem;">Réinitialiser ton mot de passe</h1>

    <div class="my-5 col-12 col-lg-8 m-auto">
        <div class="pt-5 px-5 justify-content-around bg-light-form shadow pb-3">
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}

                <div class="d-flex justify-content-center">
                    <button type="submit" class="my-3 fs-3 button-deco">Envoyer</button>
                </div>

            {{ form_end(requestForm) }}
        </div>
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}J'ai oublié mon mot de passe{% endblock %}

{% block body %}

<h1 class="m-auto my-5 d-flex align-items-center justify-content-center text-center">J'ai oublié mon mot de passe</h1>

<div class="my-5 col-12 col-lg-8 m-auto">
    <div class="pt-5 px-5 justify-content-around bg-light-form shadow pb-3">
        
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div class="d-flex justify-content-center">
                <button type="submit" class="my-3 fs-3 button-deco">Réintialiser</button>
            </div>
        {{ form_end(resetForm) }}

    </div>
</div>

{% endblock %}
